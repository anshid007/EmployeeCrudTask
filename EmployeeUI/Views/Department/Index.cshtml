

<h3>Dept Registeration</h3>
<a class="btn btn-success text-end mb-3 mt-3" id="btncreate">Create</a>

<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody id="table_data">
    </tbody>
</table>


<!-- Insert Modal -->

<div class="modal" tabindex="-1" role="dialog" id="createModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" onsubmit="validateform()">
                    <div class="form-group">
                        <label>Code</label>
                        <input type="text" id="txtcodedeptcreate" name="code" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" id="txtnamedeptcreate" name="name" class="form-control"/>
                    </div>

                    <br />
                    <input type="submit" class="btn btn-primary" onclick="AddDept()" required value="Save" />
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    function validateform() {
        // Get the values from the input fields
        var code = document.getElementById("txtcodedeptcreate").value;
        var name = document.getElementById("txtnamedeptcreate").value;

        // Perform validation
        if (code.trim() === '') {
            alert("Please enter a code.");
            return false;
        }

        if (name.trim() === '') {
            alert("Please enter a name.");
            return false; 
        }
        return true;
    }

    function validateformUpdate() {
        // Get the values from the input fields
        var code = document.getElementById("txtcodedepupdate").value;
        var name = document.getElementById("txtnamedeptupdate").value;

        // Perform validation
        if (code.trim() === '') {
            alert("Please enter a code.");
            return false;
        }

        if (name.trim() === '') {
            alert("Please enter a name.");
            return false;
        }
        return true;
    }
</script>









<!-- Update Modal -->
<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" onsubmit="validateformUpdate()">
                    <div class="form-group">
                        <input type="text" id="txtid" name="code" class="form-control" readonly/>
                    </div>
                    <div class="form-group">
                        <label>Code</label>
                        <input type="text" id="txtcodedepupdate" name="code" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" id="txtnamedeptupdate" name="name" class="form-control" />
                    </div><br />

                </form>
                <button type="button" class="btn btn-primary" onclick="UpdateDept()">Save changes</button>

            </div>
        </div>
    </div>
</div>


